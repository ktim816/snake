{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@helpers": ["./helpers"],
      "@helpers/*": ["./helpers/*"],

      "@abstracts": ["./abstracts"],
      "@interfaces": ["./interfaces"],

      "@components": ["./components"],
      "@components/*": ["./components/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true
  },
  "include": ["./src/**/*"]
}
